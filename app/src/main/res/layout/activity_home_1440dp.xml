<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    android:weightSum="14"
    tools:context=".Home">

    <RelativeLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_orange_dark">

        <TextView
            android:id="@+id/textGrid"
            android:text="ExamBites"
            android:textSize="34sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            />

    </RelativeLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/mainGrid"
        app:rowCount="2"
        app:columnCount="2"
        android:layout_marginBottom="10dp"
        app:alignmentMode="alignMargins"
        app:columnOrderPreserved="false"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="1dp"
        android:layout_marginTop="20dp"
        >

        <!-- ROW 1  -->
        <!-- COLUMN 1  -->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            app:layout_rowWeight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/phy"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="1dp"
                    android:background="@drawable/button_rounded_physics"/>

                <TextView
                    android:textAlignment="center"
                    android:text="Physics"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- COLUMN 2  -->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            app:layout_rowWeight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/chem"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="1dp"
                    android:background="@drawable/button_rounded_chemistry"/>

                <TextView
                    android:textAlignment="center"
                    android:text="Chemistry"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <!-- ROW 2  -->
        <!-- COLUMN 1  -->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            app:layout_rowWeight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/math"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="1dp"
                    android:background="@drawable/button_rounded_maths"
                    />

                <TextView
                    android:textAlignment="center"
                    android:text="Math"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- COLUMN 2  -->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            app:layout_rowWeight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/button_rounded_biology"
                    android:src="@drawable/bio"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="1dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="Biology"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- ROW 3  -->
        <!-- COLUMN 1  -->


    </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:onClick="startplayer">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="0dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/button_rounded_chemistry"
                    android:src="@drawable/inta"
                    android:layout_gravity="center"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="1dp"/>

                <TextView
                    android:textAlignment="center"
                    android:text="Search for Animation"
                    android:textColor="@android:color/black"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- COLUMN 2  -->



</LinearLayout>