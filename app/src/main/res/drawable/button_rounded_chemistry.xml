<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient
                android:type="linear"

                android:startColor="#aa5ca8"
                android:centerColor="#aa5ca8"
                android:endColor="#92298e"
                android:angle="180"
                android:gradientRadius="180"
                />
            <!--apply a border around button-->
            <stroke android:color="#00ffffff" android:width="1dp" />
            <!-- make the button corners rounded-->
            <corners android:radius="300dp"/>
        </shape>
    </item>

</selector>